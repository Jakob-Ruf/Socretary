<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="de.lucasschlemm.socretary"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>
    <uses-permission android:name="android.permission.SET_ALARM"/>

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <receiver android:name="NotificationHelper">
            <intent-filter>
                <action android:name="de.lucasschlemm.CUSTOM_INTENT">
                </action>
            </intent-filter>
        </receiver>

        <service
            android:name=".Services.DailyService"
            android:label="Daily Service">
        </service>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCuTx8U9mXMjf06GALTCgvJlDQynSDBWFc"/>
    </application>

</manifest>
