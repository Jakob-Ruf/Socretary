<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etEncDialogDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:hint="@string/HintDate"
            android:inputType="date"/>

        <EditText
            android:id="@+id/etEncDialogTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight=".4"
            android:hint="@string/HintTime"
            android:inputType="time"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <Spinner
            android:id="@+id/spEncDialogType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"/>

        <EditText
            android:id="@+id/etEncDialogLength"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight=".4"
            android:hint="@string/HintLength"
            android:inputType="time"/>

    </LinearLayout>

    <Spinner
        android:id="@+id/spEncDialogDirection"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"/>

</LinearLayout>